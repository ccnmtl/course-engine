{
  "name": "course-engine",
  "version": "1.0.0",
  "description": "EdX Course Builder from Excel",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "vite build && electron .",
    "electron:build": "vite build && electron-builder --mac"
  },
  "dependencies": {
    "exceljs": "^4.4.0",
    "fflate": "^0.8.2"
  },
  "devDependencies": {
    "electron": "^40.4.0",
    "electron-builder": "^26.7.0",
    "vite": "^6.1.0"
  },
  "build": {
    "appId": "com.courseengine.app",
    "productName": "Course Engine",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.education",
      "target": "dmg",
      "icon": "electron/icon.icns"
    },
    "dmg": {
      "title": "Course Engine",
      "icon": "electron/icon.icns",
      "background": "electron/dmg-background.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}